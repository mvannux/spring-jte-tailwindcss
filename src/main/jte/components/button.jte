@param String text
@param String type = "button"
@param String color = "blue"
@param Boolean disabled = false

<button type="${type}" class="px-4 py-2 font-semibold text-white bg-${color}-500 rounded-lg shadow-md hover:bg-${color}-700 focus:outline-none focus:ring-2 focus:ring-${color}-400 focus:ring-opacity-75">
  ${text}
</button>
